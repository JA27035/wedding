  <script>
    const target = "https://sayi.do/jaydonandjess";

    // JS redirect (some browsers ignore meta refresh in certain cases)
    window.location.replace(target);

    // Optional: countdown text (useful if redirects are blocked)
    let seconds = 3;
    const el = document.getElementById("countdown");
    const timer = setInterval(() => {
      el.textContent = `If nothing happens, use the button above. (${seconds}s)`;
      seconds--;
      if (seconds < 0) clearInterval(timer);
    }, 1000);
  </script>
